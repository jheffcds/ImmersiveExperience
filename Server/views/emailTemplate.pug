doctype html
html
  head
    meta(charset="UTF-8")
    style.
      body {
        font-family: 'Helvetica Neue', sans-serif;
        background-color: #f5f5f5;
        padding: 40px;
        color: #333;
      }
      .container {
        max-width: 600px;
        margin: auto;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }
      .logo {
        display: block;
        margin: 0 auto 20px;
        max-width: 120px;
      }
      h2 {
        color: #111;
        text-align: center;
      }
      table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
      }
      th, td {
        text-align: left;
        padding: 8px;
        border-bottom: 1px solid #eee;
      }
      .total {
        font-size: 18px;
        font-weight: bold;
        text-align: right;
        padding-top: 20px;
      }
  body
    .container
      img.logo(src="https://www.vr-verity.com/assets/images/logo.png", alt="VR Verity")
      h2 Thank you for your purchase, #{name}!
      p Here is your receipt:
      table
        thead
          tr
            th Scene Title
            th Price
        tbody
          each scene in scenes
            tr
              td #{scene.title}
              td $#{scene.price.toFixed(2)}
      p.total Total: $#{total.toFixed(2)}
      p(style="text-align:center; padding-top: 20px;") This email contains your official receipt. If you have any questions, contact us at support@vr-verity.com
